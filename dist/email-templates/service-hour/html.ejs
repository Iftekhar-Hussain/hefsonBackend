<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <style>
      body {
        background-color: #f7f7f7;
        padding: 0;
        margin: 0;
      }

      .EmailBox {
        padding: 15px;
        box-shadow: 4px 4px 15px #f7f7f7, 3px 4px 9px #f7f7f7,
          inset -5px 5px 10px rgba(233, 233, 233, 0.2),
          inset 5px -5px 10px rgba(233, 233, 233, 0.2),
          inset -5px -5px 10px rgba(255, 255, 255, 0.9),
          inset 5px 5px 13px rgba(233, 233, 233, 0.9);
        border-radius: 15px;
        text-align: center;
      }

      .linkBox {
        box-shadow: -8px -8px 14px #ffffff,
          -4px -4px 2px rgba(255, 255, 255, 0.5),
          -4px 4px 8px rgba(222, 222, 222, 0.2),
          4px -4px 8px rgba(222, 222, 222, 0.2), -4px -4px 8px #ffffff,
          4px 4px 10px #dcdcdc;
        color: rgba(0, 0, 0, 0.8);
        text-align: center;
        border-radius: 10px;
        cursor: pointer;
      }

      @media (max-width: 575px) {
        body {
          font-size: 14px !important;
          line-height: 28px !important;
        }

        .theme-btn {
          font-size: 14px !important;
          letter-spacing: 0 !important;
        }
      }
    </style>
  </head>

  <body
    style="
      background-color: #f7f7f7;
      padding: 0;
      margin: 0;
      font-size: 16px;
      color: #000000;
      line-height: 34px;
      font-family: Inter, sans-serif;
    "
  >
    <table
      border="0"
      cellpadding="0"
      cellspacing="10"
      height="100%"
      bgcolor="#f7f7f7"
      width="100%"
      style="max-width: 650px; margin: auto; padding: 0px 40px"
      id="bodyTable"
    >
      <tr>
        <td align="center" valign="top">
          <table
            border="0"
            cellpadding="0"
            cellspacing="0"
            width="100%"
            id="emailContainer"
            style="font-family: Inter, sans-serif; color: #000000"
          >
            <!-- Logo -->

            <tr>
              <td
                align="left"
                valign="top"
                colspan="2"
                style="padding-bottom: 10px; text-align: center"
              >
                <img src="hefson_logo.png" alt="" />
              </td>
            </tr>

            <!-- Title -->
            <tr>
              <td
                align="left"
                valign="top"
                colspan="2"
                style="padding: 20px 0 10px 0"
              >
                <span>Hi <%= data.userData.fullName %> ,</span>
                <!-- <span>Hi User ,</span> -->

                <br />Greetings!
              </td>
            </tr>

            <!-- Messages -->

            <tr>
              <td
                align="left"
                valign="top"
                colspan="2"
                style="padding-top: 0px"
              >
                <p>
                  Your trailer engine hours exceeds 2500 hours. Do service your
                  trailer.
                </p>
              </td>
            </tr>
            <tr>
              <td class="EmailBox">
                <p>Trailer: <%= data.unitNumber %></p>
              </td>
            </tr>
            <tr>
              <td>
                <p>
                  Thanks,<br />
                  Hefson Team
                </p>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </body>
</html>
